<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<bean id = "actor1" class = "com.stackroute.Actor">
    <constructor-arg name="name" index = "0" type = "java.lang.String" value = "ShahRukh Khan"></constructor-arg>
    <constructor-arg name="gender" index = "1" type = "java.lang.String" value = "Male"></constructor-arg>
    <constructor-arg name = "age" index = "2" type = "int" value = "55"></constructor-arg>
</bean>
    <bean id = "actor2" class = "com.stackroute.Actor">
        <constructor-arg name="name" index = "0" type = "java.lang.String" value = "Salman Khan"></constructor-arg>
        <constructor-arg name="gender" index = "1" type = "java.lang.String" value = "Male"></constructor-arg>
        <constructor-arg name = "age" index = "2" type = "int" value = "53"></constructor-arg>
    </bean>
    <bean id = "actor3" class = "com.stackroute.Actor">
        <constructor-arg name="name" index = "0" type = "java.lang.String" value = "Katrina Kaif"></constructor-arg>
        <constructor-arg name="gender" index = "1" type = "java.lang.String" value = "Female"></constructor-arg>
        <constructor-arg name = "age" index = "2" type = "int" value = "40"></constructor-arg>
    </bean>



    <bean name = "movie1, movie2" class = "com.stackroute.Movie">
        <constructor-arg name="actor" ref = "actor2"></constructor-arg>
    </bean>
</beans>